{
  "name": "splitwise",
  "version": "1.0.0",
  "private": true,
  "description": "Telegram Mini App Splitwise clone (NestJS + React) for Railway",
  "workspaces": [
    "apps/backend",
    "apps/web"
  ],
  "scripts": {
    "dev:backend": "npm run start:dev --workspace backend",
    "dev:web": "npm run dev --workspace web",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace backend",
    "start": "npm run start:prod --workspace backend",
    "prisma:deploy": "npm run prisma:deploy --workspace backend",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
